@model WebApplication1.Models.Post

@{
    // ViewData["Title"] = "Create";
}


<h1>Create</h1>

<h4>Post</h4>
<hr />
<div class="row mb-4">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" value=@User.Identity?.Name />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" value=@ViewData["Title"]/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" value=@ViewData["Content"] />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" value=@ViewData["Image"] />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatePublished" class="control-label"></label>
                <input asp-for="DatePublished" class="form-control" value=@ViewData["DatePublished"] />
                <span asp-validation-for="DatePublished" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
            <p>Сохранить? (Если выбрано 'yes', то вместо публикации произойдет сохранение, иначе произойдет публикация)</p>
            <select name="save">
                <option value="yes">yes</option>
                <option value="no"> no</option>
            </select>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

